<div id="<%= dom_id promotion %>">
  <p>
    <strong>Name:</strong>
    <%= promotion.name %>
  </p>

  <p>
    <strong>Start date:</strong>
    <%= promotion.start_date %>
  </p>

  <p>
    <strong>End date:</strong>
    <%= promotion.end_date %>
  </p>

  <p>
    <strong>Teacher:</strong>
    <%= Person.find(promotion.teacher_id).fullname %>
  </p>
  <p>
    <strong>Students:</strong>
    <%for student in promotion.people %>
      <%= student.fullname %> <%if student != promotion.people.last%> | <%end%>
    <%end%>
  </p>
</div>
